<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.project2.ExecutionActivity">

<Button
    android:text="3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bt_three"
    android:layout_alignTop="@+id/bt_two"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<Button
    android:text="2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bt_two"
    android:layout_alignBaseline="@+id/bt_one"
    android:layout_alignBottom="@+id/bt_one"
    android:layout_centerHorizontal="true" />

<Button
    android:text="5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bt_five"
    android:layout_alignBaseline="@+id/bt_four"
    android:layout_alignBottom="@+id/bt_four"
    android:layout_alignLeft="@+id/bt_two"
    android:layout_alignStart="@+id/bt_two" />

<Button
    android:text="6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/bt_five"
    android:layout_alignLeft="@+id/bt_three"
    android:layout_alignStart="@+id/bt_three"
    android:id="@+id/bt_six" />

<Button
    android:text="8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/bt_seven"
    android:layout_alignLeft="@+id/bt_five"
    android:layout_alignStart="@+id/bt_five"
    android:id="@+id/bt_eight" />

<Button
    android:text="9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bt_nine"
    android:layout_alignBaseline="@+id/bt_eight"
    android:layout_alignBottom="@+id/bt_eight"
    android:layout_alignLeft="@+id/bt_six"
    android:layout_alignStart="@+id/bt_six" />

<Button
    android:text="0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bt_eight"
    android:layout_alignLeft="@+id/bt_eight"
    android:layout_alignStart="@+id/bt_eight"
    android:layout_marginTop="21dp"
    android:id="@+id/bt_zero" />

<Button
    android:text="enter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bt_submit"
    android:layout_alignBaseline="@+id/bt_zero"
    android:layout_alignBottom="@+id/bt_zero"
    android:layout_alignLeft="@+id/bt_nine"
    android:layout_alignStart="@+id/bt_nine" />

<Button
    android:text="7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bt_seven"
    android:layout_below="@+id/bt_four"
    android:layout_alignLeft="@+id/bt_four"
    android:layout_alignStart="@+id/bt_four"
    android:layout_marginTop="24dp" />

<Button
    android:text="4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp"
    android:id="@+id/bt_four"
    android:layout_below="@+id/bt_one"
    android:layout_alignLeft="@+id/bt_one"
    android:layout_alignStart="@+id/bt_one" />

<Button
    android:text="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="124dp"
    android:id="@+id/bt_one"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="C"
    android:id="@+id/bt_cancel"
    android:layout_alignTop="@+id/bt_zero"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>
